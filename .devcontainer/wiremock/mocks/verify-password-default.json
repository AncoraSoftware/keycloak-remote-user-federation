{
  "request": {
    "method": "POST",
    "urlPath": "/api/verify",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.username"
      },
      {
        "matchesJsonPath": "$.password"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "valid": "{{#eq (jsonPath request.body '$.password') 'password123'}}true{{else}}false{{/eq}}"
    }
  }
}
